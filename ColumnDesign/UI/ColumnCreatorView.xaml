        </TabItem>
        <TabItem Background="White" BorderBrush="Transparent" Template="{DynamicResource TabItemControlTemplate}">
            <TabItem.Header>
                <TextBlock Foreground="Black" FontSize="12">Scissor Clamp Columns</TextBlock>
            </TabItem.Header>
            <TabItem.Content>
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="260" />
                        </Grid.ColumnDefinitions>
                        <Button DockPanel.Dock="Bottom" Content="Create Scissor Clamp Sheet!"
                                x:Name="DrawScissors"
                                Height="50"
                                Grid.Column="1"
                                FontSize="18"
                                Foreground="White"
                                Command="{Binding DrawScissorsCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Border" Background="White" BorderBrush="Gray"
                                                        BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition
                                                                Binding="{Binding Path=(Validation.HasError), 
                                                        ElementName=SWidthX}"
                                                                Value="False" />
                                                            <Condition
                                                                Binding="{Binding Path=(Validation.HasError), 
                                                        ElementName=SLengthY}"
                                                                Value="False" />
                                                            <Condition
                                                                Binding="{Binding Path=(Validation.HasError), 
                                                        ElementName=SHeightZ}"
                                                                Value="False" />
                                                            <Condition
                                                                Binding="{Binding Path=(Validation.HasError),
                                                        ElementName=SQuantity}"
                                                                Value="False" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="IsEnabled" Value="True" />
                                                    </MultiDataTrigger>
                                                    <Trigger Property="IsEnabled" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="Red" />
                                                        <Setter Property="Foreground" Value="White" />
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="Border" Property="Background" Value="Gray" />
                                                        <Setter Property="Foreground" Value="White" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Image Grid.Column="2" Source="../Resources/Logo_full.jpg" VerticalAlignment="Bottom"
                               Width="150" HorizontalAlignment="Right" />
                    </Grid>
                    <StackPanel DockPanel.Dock="Left" Width="210"
                                FocusManager.FocusedElement="{Binding ElementName=SWidthX}" Margin="5,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Foreground="Gray" Width="155"
                                       Text="Units in inches or ft'-in" HorizontalAlignment="Left" />
                            <Rectangle Grid.Row="1" Grid.Column="0" Stroke="Black" Height="35" Margin="0,0,5,0"
                                       VerticalAlignment="Bottom" />
                            <Rectangle Grid.Row="1" Grid.Column="1" Stroke="Black" Height="35" Margin="0,0,5,0"
                                       VerticalAlignment="Bottom" />
                            <Rectangle Grid.Row="2" Grid.Column="0" Stroke="Black" Height="35" Margin="0,0,5,0"
                                       VerticalAlignment="Bottom" />
                            <Rectangle Grid.Row="2" Grid.Column="1" Stroke="Black" Height="35" Margin="0,0,5,0"
                                       VerticalAlignment="Bottom" />
                            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                <TextBlock Background="White" HorizontalAlignment="Left" Margin="5,0">Width (X)</TextBlock>
                                <TextBox x:Name="SWidthX" Width="65" TabIndex="0"
                                         Style="{StaticResource TextBoxInError}" BorderBrush="Transparent"
                                         Margin="5,0,5,5">
                                    <TextBox.Text>
                                        <Binding Path="SWidthX" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule Min="8" Max="46" ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left">
                                <TextBlock Background="White" HorizontalAlignment="Left" Margin="5,0">Length (Y)</TextBlock>
                                <TextBox x:Name="SLengthY" Width="65" TabIndex="1"
                                         Style="{StaticResource TextBoxInError}" Margin="5,0,5,5"
                                         BorderBrush="Transparent">
                                    <TextBox.Text>
                                        <Binding Path="SLengthY" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule Min="8" Max="46" ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock Background="White" Margin="5,0" HorizontalAlignment="Left">Height (Z)</TextBlock>
                                <TextBox x:Name="SHeightZ" Width="65" TabIndex="2"
                                         Style="{StaticResource TextBoxInError}" Margin="5,0,5,5"
                                         BorderBrush="Transparent">
                                    <TextBox.Text>
                                        <Binding Path="SHeightZ" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule Min="12" Max="480" ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left">
                                <TextBlock Background="White" HorizontalAlignment="Left" Margin="5,0">Quantity</TextBlock>
                                <TextBox x:Name="SQuantity" Width="65" TabIndex="3"
                                         Style="{StaticResource TextBoxInError}" Margin="5,0,5,5"
                                         BorderBrush="Transparent">
                                    <TextBox.Text>
                                        <Binding Path="SQuantity" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule Min="1" Max="2147483647"
                                                                   ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Height="45.5">
                            <TextBlock VerticalAlignment="Bottom">Maximum height<LineBreak />w/ full liquid head:</TextBlock>
                            <TextBlock x:Name="SMaxHeight" VerticalAlignment="Bottom" FontSize="12" Foreground="Black">N/A</TextBlock>
                        </StackPanel>
                        <Grid Width="160" HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="35"
                                       Margin="0,0,5,0" VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" Background="White" HorizontalAlignment="Left" Margin="5,5,5,0">Plywood type</TextBlock>
                            <TextBox x:Name="SPlywoodType" TabIndex="4" Grid.Row="1"
                                     Text="{Binding PlywoodType, UpdateSourceTrigger=PropertyChanged}"
