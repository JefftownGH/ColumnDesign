                                    HorizontalAlignment="Left">
                                    <Line Y2="30" Stroke="Black" />
                                    <Line X2="30" Stroke="Black" VerticalAlignment="Bottom" />
                                    <TextBlock
                                        Grid.Row="0"
                                        FontSize="12"
                                        VerticalAlignment="Top"
                                        Margin="3,0,0,0"
                                        Text="Z"
                                        Padding="0" />
                                    <TextBlock
                                        FontSize="12"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,2"
                                        Text="Y" />
                                </Grid>
                            </Grid>
                        </DockPanel>
                    </DockPanel>
                </DockPanel>
            </TabItem.Content>
        </TabItem>
    </TabControl>
