                        <DockPanel
                            Margin="10"
                            LastChildFill="True">
                            <Grid
                                DockPanel.Dock="Left">
                                <Line Style="{StaticResource TreeLine}" X1="0" X2="1" Margin="-1,0,-1.4,0"
                                      VerticalAlignment="Bottom" />
