<Window
    x:Class="ColumnDesign.UI.ColumnCreatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:ColumnDesign.ViewModel"
    mc:Ignorable="d"
    ResizeMode="NoResize"
    Title="ColumnCreator (version 5.0)"
    Height="543"
    Width="800"
    MinHeight="543"
    MinWidth="800"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance vm:ColumnCreatorViewModel }"
    Icon="../Resources/Logo.ico"
    Style="{DynamicResource SettingsWindowStyle}"
    MaxWidth="800"
    MaxHeight="543">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Styles/SettingsStyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl
        x:Name="Tabs"
        BorderBrush="Transparent">
        <TabItem
            Background="White"
            BorderBrush="Transparent"
            Template="{DynamicResource TabItemControlTemplate}">
            <TabItem.Header>
                <TextBlock
                    Foreground="Black"
                    FontSize="12">
                    Gates Columns
                </TextBlock>
            </TabItem.Header>
            <TabItem.Content>
                <DockPanel
                    LastChildFill="True"
                    Margin="10,0,10,8">
                    <Line
                        DockPanel.Dock="Bottom"
                        X1="0"
                        X2="1"
                        Stretch="Fill"
                        Stroke="Red"
                        Margin="0,0,-5,-5"
                        StrokeThickness="2" />
                    <Line
                        DockPanel.Dock="Right"
                        Y1="0"
                        Y2="1"
                        Stretch="Fill"
                        Stroke="Red"
                        Margin="0,0,-5,-5"
                        StrokeThickness="2" />
                    <Grid
                        DockPanel.Dock="Bottom"
                        Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="232" />
                            <ColumnDefinition />
                            <ColumnDefinition
                                Width="290" />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="DrawGates"
                            Content="Create Gates Sheet!"
                            Height="50"
                            Grid.Column="1"
                            FontSize="18"
                            Foreground="White"
                            Command="{Binding DrawGatesCommand}">
                            <Button.Style>
                                <Style
                                    TargetType="Button">
                                    <Setter
                                        Property="IsEnabled"
                                        Value="True" />
                                    <Setter
                                        Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate
                                                TargetType="Button">
                                                <Border
                                                    x:Name="Border"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="1">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding Text.Length, ElementName=WidthX}"
                                                        Value="0">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding Text.Length, ElementName=LengthY}"
                                                        Value="0">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding Text.Length, ElementName=HeightZ}"
                                                        Value="0">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding Text.Length, ElementName=Quantity}"
                                                        Value="0">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding (Validation.HasError), ElementName=WidthX}"
                                                        Value="True">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding (Validation.HasError), ElementName=LengthY}"
                                                        Value="True">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding (Validation.HasError), ElementName=HeightZ}"
                                                        Value="True">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding (Validation.HasError), ElementName=Quantity}"
                                                        Value="True">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding Visibility, ElementName=TxtPlyError}"
                                                        Value="Visible">
                                                        <Setter
                                                            Property="IsEnabled"
                                                            Value="False" />
                                                    </DataTrigger>
                                                    <Trigger
                                                        Property="IsEnabled"
                                                        Value="True">
                                                        <Setter
                                                            TargetName="Border"
                                                            Property="Background"
                                                            Value="Red" />
                                                        <Setter
                                                            Property="Foreground"
                                                            Value="White" />
                                                    </Trigger>
                                                    <Trigger
                                                        Property="IsEnabled"
                                                        Value="False">
                                                        <Setter
                                                            TargetName="Border"
                                                            Property="Background"
                                                            Value="Gray" />
                                                        <Setter
                                                            Property="Foreground"
                                                            Value="White" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Image
                            Grid.Column="2"
                            Source="../Resources/Logo_full.png"
                            VerticalAlignment="Bottom"
                            Width="150"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0" />
                    </Grid>
                    <StackPanel
                        DockPanel.Dock="Left"
                        FocusManager.FocusedElement="{Binding ElementName=WidthX}"
                        Margin="5,0,0,-50">
                        <Grid
                            Margin="27,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="110" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Foreground="Gray"
                                Width="155"
                                Text="Units in inches or ft'-in"
                                HorizontalAlignment="Left"
                                FontSize="12"
                                Margin="0,20,5,8"
                                Padding="0"
                                VerticalAlignment="Bottom" />
                            <Rectangle
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="35"
                                Width="95"
                                Margin="0,0,0,9"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                                <Rectangle.Style>
                                    <Style
                                        TargetType="Rectangle">
                                        <Setter
                                            Property="Stroke"
                                            Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=WidthX}"
                                                Value="True">
                                                <Setter
                                                    Property="Stroke"
                                                    Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                            <Rectangle
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="33"
                                Width="34"
                                Margin="0,0,16,10"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Fill="#C4C4C4" />
                            <Rectangle
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="35"
                                Width="95"
                                Margin="0,0,0,9"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                                <Rectangle.Style>
                                    <Style
                                        TargetType="Rectangle">
                                        <Setter
                                            Property="Stroke"
                                            Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=LengthY}"
                                                Value="True">
                                                <Setter
                                                    Property="Stroke"
                                                    Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                            <Rectangle
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="33"
                                Width="34"
                                Margin="0,0,1,10"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Fill="#C4C4C4" />
                            <Rectangle
                                Grid.Row="2"
                                Grid.Column="0"
                                Height="35"
                                Width="95"
                                Margin="0,0,0,9"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                                <Rectangle.Style>
                                    <Style
                                        TargetType="Rectangle">
                                        <Setter
                                            Property="Stroke"
                                            Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=HeightZ}"
                                                Value="True">
                                                <Setter
                                                    Property="Stroke"
                                                    Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                            <Rectangle
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="35"
                                Width="95"
                                Margin="0,0,0,9"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                                <Rectangle.Style>
                                    <Style
                                        TargetType="Rectangle">
                                        <Setter
                                            Property="Stroke"
                                            Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=Quantity}"
                                                Value="True">
                                                <Setter
                                                    Property="Stroke"
                                                    Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                            <TextBlock
                                x:Name="WidthXHint"
                                MaxWidth="55"
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="5,0"
                                Opacity="0.3"
                                Width="55"
                                Padding="5,0,2,0"
                                FontSize="12">
                                12" - 48"
                            </TextBlock>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,9">
                                <TextBlock
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="5,0,5,2"
                                    Text="Width (X)"
                                    FontSize="10"
                                    Padding="2,0">
                                    <TextBlock.Style>
                                        <Style
                                            TargetType="TextBlock">
                                            <Setter
                                                Property="Foreground"
                                                Value="Black" />
                                            <Style.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding (Validation.HasError), ElementName=WidthX}"
                                                    Value="True">
                                                    <Setter
                                                        Property="Foreground"
                                                        Value="Red" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox
                                    x:Name="WidthX"
                                    MaxWidth="55"
                                    TabIndex="0"
                                    Style="{StaticResource TextBoxInError}"
                                    BorderBrush="Transparent"
                                    Margin="5,0,5,5"
                                    Template="{DynamicResource TextBoxControlTemplate}"
                                    Width="55"
                                    TextChanged="WidthX_OnTextChanged"
                                    Background="Transparent">
                                    <Binding
                                        Path="WidthX"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <vm:ValueRangeRule
                                                Min="12"
                                                Max="48"
                                                ValidatesOnTargetUpdated="True" />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox>
                            </StackPanel>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Padding="0"
                                Margin="5,0,0,0"
                                FontSize="7"
                                Foreground="Red"
                                Text="Out of range">
                                <TextBlock.Style>
                                    <Style
                                        TargetType="TextBlock">
                                        <Setter
                                            Property="Visibility"
                                            Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=WidthX}"
                                                Value="True">
                                                <Setter
                                                    Property="Visibility"
                                                    Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                x:Name="LengthYHint"
                                MaxWidth="55"
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Margin="5,0"
                                Opacity="0.3"
                                Width="55"
                                Padding="5,0,2,0"
                                FontSize="12">
                                12" - 48"
                            </TextBlock>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left">
                                <TextBlock
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="5,0,5,2"
                                    Text="Length (Y)"
                                    FontSize="10"
                                    Padding="2,0">
                                    <TextBlock.Style>
                                        <Style
                                            TargetType="TextBlock">
                                            <Setter
                                                Property="Foreground"
                                                Value="Black" />
                                            <Style.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding (Validation.HasError), ElementName=LengthY}"
                                                    Value="True">
                                                    <Setter
                                                        Property="Foreground"
                                                        Value="Red" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox
                                    x:Name="LengthY"
                                    TabIndex="1"
                                    Background="Transparent"
                                    Style="{StaticResource TextBoxInError}"
                                    Margin="5,0,5,5"
                                    BorderBrush="Transparent"
                                    Template="{DynamicResource TextBoxControlTemplate}"
                                    MaxWidth="55"
                                    Width="55"
                                    TextChanged="LengthY_OnTextChanged">
                                    <TextBox.Text>
                                        <Binding
                                            Path="LengthY"
                                            UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule
                                                    Min="12"
                                                    Max="48"
                                                    ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Padding="0"
                                Margin="5,0,0,0"
                                FontSize="7"
                                Foreground="Red"
                                Text="Out of range">
                                <TextBlock.Style>
                                    <Style
                                        TargetType="TextBlock">
                                        <Setter
                                            Property="Visibility"
                                            Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=LengthY}"
                                                Value="True">
                                                <Setter
                                                    Property="Visibility"
                                                    Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <CheckBox
                                Grid.Row="1"
                                Grid.Column="0"
                                x:Name="WindowX"
                                IsChecked="{Binding WindowX}"
                                Checked="Window_OnChecked"
                                Unchecked="Window_OnUnchecked"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,25,0"
                                BorderBrush="Black"
                                Template="{DynamicResource CheckBoxControlTemplate}">
                                <CheckBox.Style>
                                    <Style
                                        TargetType="CheckBox">
                                        <Setter
                                            Property="IsEnabled"
                                            Value="True" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding Text.Length, ElementName=WidthX}"
                                                Value="0">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding Text.Length, ElementName=LengthY}"
                                                Value="0">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding Text.Length, ElementName=HeightZ}"
                                                Value="0">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>

                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=WidthX}"
                                                Value="True">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=LengthY}"
                                                Value="True">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=HeightZ}"
                                                Value="True">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                            <TextBlock
                                x:Name="HeightZHint"
                                MaxWidth="55"
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="5,0"
                                Opacity="0.3"
                                Width="55"
                                Padding="5,0,2,0"
                                FontSize="12">
                                96" - 240"
                            </TextBlock>
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,9">
                                <TextBlock
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Text="Height (Z)"
                                    Margin="5,0,5,2"
                                    Padding="2,0"
                                    FontSize="10">
                                    <TextBlock.Style>
                                        <Style
                                            TargetType="TextBlock">
                                            <Setter
                                                Property="Foreground"
                                                Value="Black" />
                                            <Style.Triggers>

                                                <DataTrigger
                                                    Binding="{Binding (Validation.HasError), ElementName=HeightZ}"
                                                    Value="True">
                                                    <Setter
                                                        Property="Foreground"
                                                        Value="Red" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox
                                    x:Name="HeightZ"
                                    TabIndex="2"
                                    Background="Transparent"
                                    Style="{StaticResource TextBoxInError}"
                                    BorderBrush="Transparent"
                                    Margin="5,0,5,5"
                                    Template="{DynamicResource TextBoxControlTemplate}"
                                    MaxWidth="85"
                                    Width="85"
                                    TextChanged="HeightZ_OnTextChanged">
                                    <TextBox.Text>
                                        <Binding
                                            Path="HeightZ"
                                            UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule
                                                    Min="96"
                                                    Max="240"
                                                    ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Padding="0"
                                Margin="5,0,0,0"
                                FontSize="7"
                                Foreground="Red"
                                Text="Out of range">
                                <TextBlock.Style>
                                    <Style
                                        TargetType="TextBlock">
                                        <Setter
                                            Property="Visibility"
                                            Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=HeightZ}"
                                                Value="True">
                                                <Setter
                                                    Property="Visibility"
                                                    Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                x:Name="QuantityHint"
                                MaxWidth="55"
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Margin="5,0"
                                Opacity="0.3"
                                Width="55"
                                Padding="5,0,2,0"
                                FontSize="12">
                                1 ... ∞
                            </TextBlock>
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left">
                                <TextBlock
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="5,0,5,2"
                                    Padding="2,0"
                                    FontSize="10"
                                    Text="Quantity">
                                    <TextBlock.Style>
                                        <Style
                                            TargetType="TextBlock">
                                            <Setter
                                                Property="Foreground"
                                                Value="Black" />
                                            <Style.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding (Validation.HasError), ElementName=Quantity}"
                                                    Value="True">
                                                    <Setter
                                                        Property="Foreground"
                                                        Value="Red" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox
                                    x:Name="Quantity"
                                    TabIndex="3"
                                    Background="Transparent"
                                    Style="{StaticResource TextBoxInError}"
                                    BorderBrush="Transparent"
                                    Margin="5,0,5,5"
                                    Template="{DynamicResource TextBoxControlTemplate}"
                                    MaxWidth="85"
                                    Width="85"
                                    TextChanged="Quantity_OnTextChanged">
                                    <TextBox.Text>
                                        <Binding
                                            Path="Quantity"
                                            UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <vm:ValueRangeRule
                                                    Min="1"
                                                    Max="2147483647"
                                                    ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Padding="0"
                                Margin="5,0,0,0"
                                FontSize="7"
                                Foreground="Red"
                                Text="Out of range">
                                <TextBlock.Style>
                                    <Style
                                        TargetType="TextBlock">
                                        <Setter
                                            Property="Visibility"
                                            Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding (Validation.HasError), ElementName=Quantity}"
                                                Value="True">
                                                <Setter
                                                    Property="Visibility"
                                                    Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                FontSize="6"
                                Margin="0,0,22,0"
                                Padding="0,0,0,10"
                                Foreground="Black">
                                Window
                            </TextBlock>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                FontSize="6"
                                Margin="0,0,7,0"
                                Padding="0,0,0,10"
                                Foreground="Black">
                                Window
                            </TextBlock>
                            <CheckBox
                                Grid.Row="1"
                                Grid.Column="1"
                                x:Name="WindowY"
                                IsChecked="{Binding WindowY}"
                                Checked="Window_OnChecked"
                                Unchecked="Window_OnUnchecked"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                BorderBrush="Black"
                                Template="{DynamicResource CheckBoxControlTemplate}">
                                <CheckBox.Style>
                                    <Style
                                        TargetType="CheckBox">
                                        <Setter
                                            Property="IsEnabled"
                                            Value="True" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding Text.Length, ElementName=WidthX}"
                                                Value="0">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding Text.Length, ElementName=LengthY}"
                                                Value="0">
                                                <Setter
                                                    Property="IsEnabled"
                                                    Value="False" />
