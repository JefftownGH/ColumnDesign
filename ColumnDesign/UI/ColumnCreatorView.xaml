                        </Grid>
                        <Grid HorizontalAlignment="Left" Width="160">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="105"
                                       Margin="0,0,5,0" VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Background="White" Margin="5,5,5,0">Clamp size</TextBlock>
                            <StackPanel Grid.Row="1">
                                <RadioButton x:Name="Clampsize1">36" Scissor clamp</RadioButton>
                                <RadioButton x:Name="Clampsize2">48" Scissor clamp</RadioButton>
                                <RadioButton x:Name="Clampsize3">60" Scissor clamp</RadioButton>
                                <RadioButton x:Name="ClampSizeChoose" IsChecked="True">Choose by column size</RadioButton>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right">
                        <TextBlock HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Bottom"
                                   FontSize="12"
                                   Padding="2,2,2,0" Margin="5,5,5,0">
                            Sheet fields
                        </TextBlock>
                        <Line Height="3" Fill="Red" Stroke="Red" HorizontalAlignment="Left" Width="67" Margin="5,0,0,0"
                              X2="67" VerticalAlignment="Top" />
                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                       VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Sheet name</TextBlock>
                            <TextBox Grid.Row="1" x:Name="SSheetName" Width="250" TabIndex="6" Margin="5,0,5,5"
                                     Text="{Binding SSheetName, UpdateSourceTrigger=PropertyChanged }" Padding="2,0" IsReadOnly="True"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                       VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Project title</TextBlock>
                            <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SProjectTitle" Width="250" Padding="2,0"
                                     TabIndex="7">
                                Project title
                            </TextBox>
                        </Grid>
                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                       VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Project address</TextBlock>
                            <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SProjectAddress" Width="250" Padding="2,0"
                                     TabIndex="8">
                                Project address
                            </TextBox>
                        </Grid>
                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                       VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Date</TextBlock>
                            <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SDate" Width="250" TabIndex="9"
                                     Text="{Binding SDate, UpdateSourceTrigger=PropertyChanged}" Padding="2,0" />
                        </Grid>
                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                       VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Sheet issued for...</TextBlock>
                            <ComboBox x:Name="SSheetIssuedFor" Grid.Row="1" Width="250" Padding="2,0" Margin="5,0,5,5"
                                      Background="White" BorderThickness="0" Height="16.5">
                                <TextBlock Margin="0" Foreground="Black">PRELIMINARY</TextBlock>
                                <TextBlock Margin="0" Foreground="Black">SUBMITTAL REVIEW</TextBlock>
                                <TextBlock Margin="0" Foreground="Black">FOR CONSTRUCTION</TextBlock>
                                <TextBlock Margin="0" Foreground="Black">OTHER</TextBlock>
                            </ComboBox>
                        </Grid>

                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                       VerticalAlignment="Bottom" />
                            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Drawn by</TextBlock>
                            <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SDrawnBy" Width="250" Padding="2,0"
                                     TabIndex="10">
                                MCC
                            </TextBox>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                           VerticalAlignment="Bottom" />
                                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Job #</TextBlock>
                                <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SJobN" Width="120" Padding="2,0"
                                         TabIndex="11">
                                    999
                                </TextBox>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                           VerticalAlignment="Bottom" />
                                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Sheet</TextBlock>
                                <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SSheetNumber" Width="115" Padding="2,0"
                                         TabIndex="12">
                                    1.0.0
                                </TextBox>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                           VerticalAlignment="Bottom" />
                                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">Suffix</TextBlock>
                                <TextBox Grid.Row="1" Margin="5,0,5,5" x:Name="SSuffix" Width="120" Padding="2,0"
                                         TabIndex="13">
                                    A
                                </TextBox>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Stroke="Black" Height="30"
                                           VerticalAlignment="Bottom" />
                                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,0" Background="White">McClone Area</TextBlock>
                                <ComboBox x:Name="SArea" Grid.Row="1" Width="115" SelectedIndex="2" Padding="2,0" Margin="5,0,5,5"
                                          Background="White" BorderThickness="0">
                                    <TextBlock Margin="0" Foreground="Black">CO</TextBlock>
                                    <TextBlock Margin="0" Foreground="Black">HI</TextBlock>
                                    <TextBlock Margin="0" Foreground="Black">NCA</TextBlock>
                                    <TextBlock Margin="0" Foreground="Black">SCA</TextBlock>
                                    <TextBlock Margin="0" Foreground="Black">STX</TextBlock>
                                    <TextBlock Margin="0" Foreground="Black">WA</TextBlock>
                                    <TextBlock Margin="0" Foreground="Black">NCA</TextBlock>
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Foreground="Red"
                                Width="80"
                                Height="30"
                                BorderBrush="Black"
                                Background="White"
                                Click="SSaveSettings_OnMouseDown">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="../Resources/Save.png" Height="15" />
                                    <TextBlock Foreground="Red">Save</TextBlock>
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Column="1"
                                Width="80"
                                Height="30"
                                BorderBrush="Black"
                                Background="White"
                                Click="SLoadSettings_OnMouseDown">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="../Resources/Load.png" Height="15" />
                                    <TextBlock Foreground="Red">Load</TextBlock>
                                </StackPanel>
                            </Button>


                        </Grid>
                    </StackPanel>
                    <TextBox
                        x:Name="SBoxPlySeams"
                        TabIndex="5"
                        DockPanel.Dock="Bottom"
                        Text="{Binding SBoxPlySeams }"
                        TextChanged="SBoxPlySeams_OnTextChanged"
                        BorderBrush="Black" />
                    <TextBlock
                        DockPanel.Dock="Bottom"
                        x:Name="STxtPlyError"
                        Visibility="Collapsed"
                        Text="Error" HorizontalAlignment="Left"
                        Foreground="Red" />
                                       <DockPanel x:Name="SPlyLinesPanel" LastChildFill="True">
                        <DockPanel.Style>
                            <Style TargetType="DockPanel">
                                <Setter Property="Visibility" Value="Hidden" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition
                                                Binding="{Binding Path=(Validation.HasError), ElementName=SWidthX}"
                                                Value="False" />
                                            <Condition
                                                Binding="{Binding Path=(Validation.HasError),  ElementName=SLengthY}"
                                                Value="False" />
                                            <Condition
                                                Binding="{Binding Path=(Validation.HasError),  ElementName=SHeightZ}"
                                                Value="False" />
                                            <Condition
                                                Binding="{Binding Path=(Validation.HasError),  ElementName=SQuantity}"
                                                Value="False" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DockPanel.Style>
                        
                        <Grid x:Name="STreeValues" DockPanel.Dock="Right" Margin="0,10,20,10">
